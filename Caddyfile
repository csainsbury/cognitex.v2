cognitex.org {
    # Enable automatic HTTPS with Let's Encrypt
    # Caddy will automatically obtain and renew certificates

    # Reverse proxy to FastAPI application
    reverse_proxy localhost:8000 {
        # Add headers for proper proxying
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Enable compression
    encode gzip

    # Logging
    log {
        output file /var/log/caddy/cognitex.log
        format console
    }
}

# Redirect www to non-www
www.cognitex.org {
    redir https://cognitex.org{uri} permanent
}